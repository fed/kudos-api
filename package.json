    "stop": "forever stop ./src/index.js",
    "start": "NODE_ENV=production forever start ./src/index.js"
  },
  "dependencies": {
    "assign-deep": "^1.0.1",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eslint": "^5.16.0",
    "express": "^4.17.1",
    "forever": "^1.0.0",
    "hash-util": "^0.1.0",
    "husky": "^2.4.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^8.2.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "pg": "^7.11.0",
    "prettier": "^1.18.2",
    "sequelize": "^5.15.1"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}

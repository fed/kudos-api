{
  "private": true,
  "name": "kudos-api",
  "version": "0.0.0",
  "description": "Values-based recognition program RESTful API",
  "main": "src/index.js",
  "repository": "git@github.com:fknussel/kudos-api.git",
  "license": "UNLICENSED",
  "scripts": {
    "eslint": "eslint -f stylish --ext .js ./src",
    "nodemon": "NODE_ENV=staging nodemon --inspect ./src/index.js",
